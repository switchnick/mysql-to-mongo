include ./header
div.container
  div.table-select
    h2 Select Tables to Migrate
    ul.table-list
      each table in tables
        li
          input(type="checkbox" data-table="#{table.name}" checked=table.checked) 
          span #{table.name} (#{table.row_count})
          input.hidden.form-control(data-item="newName" data-table="#{table.name}" placeholder="Rename table" value="#{table.newName || ''}")          
          input.hidden.form-control(data-item="customSql" data-table="#{table.name}" placeholder="Custom SQL" value="#{table.customSql || ''}")      
    button.btn-white.confirm-tables Configure
    button.btn-white.confirm-tables Migrate
include ./footer.jade
